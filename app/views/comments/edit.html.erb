<h1 class="text-2xl mb-4 font-bold">Edit Comment</h1>

<div class="md:w-[40%]">
  <%= simple_form_for [@post,@comment] do |f| %>
    <%= f.input :description, label: 'Comment', placeholder: 'edit a comment...', label_html: {class: 'mt-4'}, input_html: {class: 'mt-2 md:max-w-[50%]'} %>
    <%= f.submit 'Update', class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800' %>
  <% end %>
</div>